<Page x:Class="LearningManagementSystem.Pages.CoursePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:LearningManagementSystem.Pages"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      Title="CoursePage">

    <Grid
        Margin="10"
        Background="{DynamicResource SecondColor}"
        >

        <fa:ImageAwesome 
            x:Name="loader" 
            Grid.Row="1" 
            Visibility="Visible" 
            Icon="Spinner" 
            Spin="True" 
            Height="50" 
            Width="50" />

        <ScrollViewer
            x:Name="scrolViver"
            Visibility="Collapsed">
            <WrapPanel 
                x:Name="wrp_Course">
            </WrapPanel>
        </ScrollViewer>
        <Label x:Name="emptyData"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Collapsed"
            Content="Xozircha malumotlar yo'q"
            FontSize="18">
        </Label>
        
    </Grid>
</Page>
